# WhatsApp Cloud API Configuration

# Required environment variables
VERIFY_TOKEN=your_webhook_verify_token_here
APP_SECRET=your_app_secret_here
GRAPH_API_VERSION=v21.0
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# Server Configuration
PORT=3100
NODE_ENV=development
LOG_LEVEL=debug

# Optional configuration
WHATSAPP_ENABLE_LOCATION_REQUEST=true   # Enable native location request if supported
FORWARD_URL=https://your-backend-api.example.com/webhook
FORWARD_AUTH_HEADER=Bearer your-shared-secret-here

# Media handling options
# false: Provide ephemeral media_url (backend should download immediately)
# true: Download and embed as base64 (practical for small files)
FORWARD_MEDIA_AS_BASE64=false
MEDIA_MAX_BYTES=10485760                 # Max download size in base64 mode (10 MB)

